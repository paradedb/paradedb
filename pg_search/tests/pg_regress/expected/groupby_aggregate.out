-- Aggregate UDF equivalent
EXPLAIN (FORMAT TEXT, COSTS OFF, TIMING OFF)
SELECT *
FROM paradedb.aggregate(
        index => 'tickets_idx',
        query => paradedb.term('description','failed'),
        agg   => '{"buckets": {"terms": {"field": "category"}}}',
        solve_mvcc => true
);
