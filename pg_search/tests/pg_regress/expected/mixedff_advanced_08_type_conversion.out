-- Test string concatenation with numbers
SELECT 
    id,
    string_field1 || ' - ' || numeric_field1::text as text_with_num
FROM mixed_numeric_string_test
WHERE numeric_field1 > 0 AND string_field1 @@@ 'Apple'
ORDER BY id;
