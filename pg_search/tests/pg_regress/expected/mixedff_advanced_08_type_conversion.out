-- Test numeric string conversion
SELECT 
    id,
    string_field1,
    CASE 
        WHEN string_field1 ~ '^[0-9]+$' THEN string_field1::integer * 2
        ELSE numeric_field1
    END as converted_value
FROM mixed_numeric_string_test
WHERE string_field1 @@@ 'Unique'
ORDER BY id;
