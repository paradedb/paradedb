-----------------------------------------------------------------------------------------------------------------
 {"clauses":[{"term":"a"},{"term":"b"},{"term":"c"},{"term":"d"},{"regex":{"pattern":"e","max_expansions":50}}]}
(1 row)

select pdb.prox_clause('a', 42, 'b');
