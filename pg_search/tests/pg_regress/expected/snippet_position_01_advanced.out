CREATE EXTENSION IF NOT EXISTS pg_search;
DROP TABLE IF EXISTS authors;
DROP TABLE IF EXISTS books;
DROP TABLE IF EXISTS reviews;
CREATE TABLE authors (
    id SERIAL PRIMARY KEY,
    name TEXT,
    age INT
);
CREATE TABLE books (
    id SERIAL PRIMARY KEY,
    author_id INT,
    content TEXT,
    titles TEXT[],
    metadata JSONB
);
CREATE TABLE reviews (
    id SERIAL PRIMARY KEY,
    book_id INT,
    review TEXT
);
